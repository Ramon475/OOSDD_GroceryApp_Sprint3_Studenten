<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="Login / Register">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="28" VerticalOptions="Center">

            <!-- Login -->
            <StackLayout Spacing="12">
                <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
                <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
                <Button Text="Login" Command="{Binding LoginCommand}" />
            </StackLayout>

            <!-- Register -->
            <StackLayout Spacing="12">
                <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
                <!-- Let op: PascalCase property-namen -->
                <Entry Placeholder="Username" Text="{Binding RegisterName}" Keyboard="Text" />
                <Entry Placeholder="Email" Text="{Binding RegisterEmail}" Keyboard="Email" />
                <Entry Placeholder="Password" Text="{Binding RegisterPassword}" IsPassword="True" />
                <Button Text="Register" Command="{Binding RegisterCommand}" />
            </StackLayout>

            <!-- Meldingen -->
            <Label Text="{Binding ErrorMessage}" TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>